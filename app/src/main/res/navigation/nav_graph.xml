<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.aidar_badirov_hw_4_1.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
    <action
        android:id="@+id/action_registration_to_details"
        app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.aidar_badirov_hw_4_1.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
     <argument
            android:name="user"
         app:argType="com.example.aidar_badirov_hw_4_1.User"/>
    </fragment>

</navigation>